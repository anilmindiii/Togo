<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_270sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    android:layout_gravity="center"
    app:cardCornerRadius="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/rounded_half_gray_border"
            android:text="Amount"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_14sdp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Your Amount"
                    android:fontFamily="@font/proxima_nova_regular"/>

                <TextView
                    android:id="@+id/your_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/colorTextHint"
                    android:text="$"
                    android:maxLines="1"
                    android:layout_marginLeft="@dimen/_105sdp"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/proxima_nova_regular"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/colorTextHint"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Togo fee amount"
                    android:fontFamily="@font/proxima_nova_regular"/>

                <TextView
                    android:id="@+id/admin_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/colorTextHint"
                    android:text="$"
                    android:maxLines="1"
                    android:layout_marginLeft="@dimen/_105sdp"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/proxima_nova_regular"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/colorTextHint"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Togo fee amount"
                    android:fontFamily="@font/proxima_nova_regular"/>

                <TextView
                    android:id="@+id/admin_commision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/colorTextHint"
                    android:text="%"
                    android:maxLines="1"
                    android:layout_marginLeft="@dimen/_105sdp"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/proxima_nova_regular"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/colorTextHint"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Total"
                    android:fontFamily="@font/proxima_nova_semibold"/>

                <TextView
                    android:id="@+id/total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/colorTextHint"
                    android:text="$"
                    android:maxLines="1"
                    android:layout_marginLeft="@dimen/_105sdp"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/proxima_nova_semibold"/>

            </RelativeLayout>

            <Button
                android:id="@+id/tv_ok"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/continue_btn_bg"
                android:fontFamily="@font/proxima_nova_semibold"
                android:text="@string/mdtp_ok"
                android:textAllCaps="false"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:textColor="@drawable/continue_btn_text_color"
                android:textSize="@dimen/textMediamSize" />

        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>
