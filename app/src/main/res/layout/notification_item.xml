<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_85sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/profile_img"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_gravity="center"
                app:siBorderColor="@color/darker_gray"
                app:siBorderWidth="0.5dp"
                android:src="@drawable/splash_logo"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anil Chourasiya jfbfbsfjbsfjwbsfjsfbsjf"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_80sdp"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/montserrat_regular"
                        android:maxLines="1"
                        android:textSize="@dimen/_13sdp"/>

                    <TextView
                        android:id="@+id/noti_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anil is accepted your request edwwd w ww wwdwdw sddsdsddsdsddsdsd"
                        android:textColor="@color/mdtp_dark_gray"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:maxLines="2"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="@dimen/_11sdp"/>

                    <TextView
                        android:id="@+id/day_ago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 Days ago"
                        android:textColor="@color/mdtp_dark_gray"
                        android:layout_margin="@dimen/_2sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="@dimen/_11sdp"/>

                </LinearLayout>

            </RelativeLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>
