<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/_5sdp">


    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="match_parent"
        android:padding="@dimen/_6sdp"
        android:src="@drawable/app_icon" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_4sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:text="Dell Chromebook"
                        android:maxLines="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/textNormalSize" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/proxima_nova_regular"
                            android:text="Quantity : "
                            android:textColor="@color/colorTextHint"
                            android:textSize="@dimen/item_size" />

                        <TextView
                            android:id="@+id/itemQuntyTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/proxima_nova_semibold"
                            android:text="dfgfgdgdf"
                            android:textColor="@color/colorTextHint"
                            android:textSize="@dimen/item_size" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/doller_shape_img"
                    android:layout_gravity="right"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/itemPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center|right"
                        android:text="$ 2500563"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/colorWhite" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/asignLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:text="Assigned to: "
                    android:textColor="@color/colorTextHint"
                    android:textSize="@dimen/item_size" />

                <TextView
                    android:id="@+id/itemAsignTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:text=""
                    android:textColor="@color/colorTextHint"
                    android:textSize="@dimen/item_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contactLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:text="Contact to: "
                    android:textColor="@color/colorTextHint"
                    android:textSize="@dimen/item_size" />

                <TextView
                    android:id="@+id/contact_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:text=""
                    android:textColor="@color/colorTextHint"
                    android:textSize="@dimen/item_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:text="Pickup Date: "
                    android:textColor="@color/colorTextHint"
                    android:textSize="@dimen/item_size" />

                <TextView
                    android:id="@+id/itemPickDt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text=""
                    android:textColor="@color/colorTextHint"
                    android:textSize="@dimen/item_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_3sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:text="Pickup Address: "
                    android:textColor="@color/colorTextHint"
                    android:textSize="@dimen/item_size" />

                <TextView
                    android:id="@+id/itemPickaddr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:singleLine="true"
                    android:text="sasasas"
                    android:textColor="@color/colorTextHint"
                    android:textSize="@dimen/item_size" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height=".6dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorTextHint" />
    </RelativeLayout>
</LinearLayout>
