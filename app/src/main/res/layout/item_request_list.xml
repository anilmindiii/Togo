<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:layout_weight=".88"
        card_view:cardElevation="@dimen/_4sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/itemImg"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_75sdp"
                android:scaleType="fitXY"
                android:src="@drawable/app_icon" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/itemNameTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:maxLines="1"
                        android:text="anil chourasiya"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/textNormalSize" />

                    <LinearLayout
                        android:id="@+id/ly_ratting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ratingBar"
                            android:layout_gravity="center|start"
                            style="?android:attr/ratingBarStyleSmall"
                            android:progressTint="@color/colorBtn"
                            android:rating="3"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:transformPivotX="0dp"
                            android:transformPivotY="0dp"
                            android:max="5"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_contact_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/proxima_nova_regular"
                            android:maxLines="2"
                            android:text="91 - 99810327834"
                            android:textColor="@color/colorTextHint"
                            android:textSize="@dimen/textSmallSize" />

                        <TextView
                            android:id="@+id/itemPriceTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/proxima_nova_regular"
                            android:maxLines="2"
                            android:text="$ 35"
                            android:gravity="right"
                            android:layout_marginRight="@dimen/_12sdp"
                            android:textColor="@color/colorTextHint"
                            android:textSize="@dimen/textSmallSize" />

                    </LinearLayout>








                </LinearLayout>

                <ImageView
                    android:id="@+id/itemChatIcon"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:src="@drawable/chat_ico" />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_weight=".12"
        card_view:cardElevation="@dimen/_4sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/acceptLay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/accept_ico" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="Accept"
                    android:maxLines="1"
                    android:textColor="@color/colorTextHint"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>


                <LinearLayout
                    android:id="@+id/rejectLay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@drawable/reject_ico" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="Reject"
                        android:maxLines="1"
                        android:textColor="@color/colorTextHint"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
